<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="hu.noherczeg.necora.domain.department.Department" table="tanszek" schema="">
        <id name="id" column="id" access="field"/>
        <property name="name" column="nev" access="field"/>
        <set name="incomes" inverse="true" access="field">
            <key>
                <column name="tanszek_id"/>
            </key>
            <one-to-many not-found="ignore" class="hu.noherczeg.necora.domain.income.Income"/>
        </set>
        <set name="institutes" inverse="true" access="field">
            <key>
                <column name="tanszek_id" not-null="true"/>
            </key>
            <one-to-many not-found="ignore" class="hu.noherczeg.necora.domain.institute.DepartmentOfInstitute"/>
        </set>
        <set name="employees" inverse="true" access="field">
            <key>
                <column name="tanszek_id" not-null="true"/>
            </key>
            <one-to-many not-found="ignore" class="hu.noherczeg.necora.domain.department.EmployeeOfDepartment"/>
        </set>
    </class>
</hibernate-mapping>